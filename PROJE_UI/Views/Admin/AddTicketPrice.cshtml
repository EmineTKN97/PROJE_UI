                <label for="Price" class="form-label">Fiyat Giriniz: </label>
            <input type="text" name="Price" class="form-control"  id="Price" value="@Model.Price">
            </div>
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
            <center>
             <button type="submit" class="btn btn-danger fw-bold mx-1">Güncelle</button>
