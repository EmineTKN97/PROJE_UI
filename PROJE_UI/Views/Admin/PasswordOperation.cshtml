@using PROJE_UI.Models;
@model AdminPasswordChange

@section css
{
    <style>
        main {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 70vh;
            margin: auto;
            padding: auto;
        }

        .rounded-form-container {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            width: 700px;
        }
    </style>
}

<div class="rounded-form-container">
    <center><h1 class="text-danger">ŞİFRE GÜNCELLE</h1></center>
    <form class="position-sticky" method="post" action="/Admin/UpdatePassword">
        <div class="mb-3">
            <label for="currentPassword" class="form-label">Eski Şifreniz</label>
            <input type="password" class="form-control" id="currentPassword" aria-describedby="Email" name="currentPassword">
        </div>
        <div class="mb-3">
            <label for="newPassword" class="form-label">Yeni Şifreniz:</label>
            <input type="password" class="form-control" id="newPassword" name="newPassword">
        </div>
        <center><button type="submit" class="btn btn-danger fw-bold mx-1">Şifre Güncelle</button></center>
    </form>
</div>
