@using PROJE_UI.Models;
@model Admin
<div class="dropdown d-none d-md-flex profile-1">
    <a href="#" data-bs-toggle="dropdown" class="nav-link pe-2 leading-none d-flex" aria-expanded="false">
        <span>
            <img src="~/assets/img/admin.png" alt="profile-user" height="80" class="avatar  profile-user brround cover-image">
        </span>
    </a>
    <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow" style="position: absolute; inset: 0px auto auto 0px; margin: 25px; padding:25px; transform: translate(-134px, 52px);" data-popper-placement="bottom-end">
        <div class="drop-heading">
            <div class="text-center">
                <h5 class="text-dark mb-0">@Char.ToUpper(Model.FirstName[0])@Model.LastName.Substring(1) @Model.LastName.ToUpper()</h5>
                <small class="text-muted">@Model.Email</small>
            </div>
        </div>
        <div class="dropdown-divider m-0">
        </div>
        <a href="/Admin/Profile">
            Profilini Düzenle
        </a>
        <a href="/Admin/PasswordOperation">
            Şifreni Değiştir
        </a>
        <a href="/Admin/Logout">
            Çıkış Yap
        </a>

    </div>
</div>