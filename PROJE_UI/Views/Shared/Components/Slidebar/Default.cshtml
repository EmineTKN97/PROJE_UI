@using PROJE_UI.Models;
@model List<Blog>

<div id="carousel-captions1" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach (Blog item in Model)
        {
            <div class="carousel-item active">
                <img class="d-block" alt="Sliderresim" width="2500px" height="500px" src="https://localhost:7185/Uploads/StaticContent/@item.ImagePath" data-bs-holder-rendered="true">
                <div class="carousel-caption d-none d-md-block">
                    <bold><h3 style=" font-family:Broadway">@item.Title.ToUpper()</h3></bold>
                    <bold>
                        <p style=" font-family:Broadway">@Html.Raw(Html.Encode(item.Content.Substring(0, Math.Min(item.Content.Length, 500))))</p>
                     
                    </bold>
                    <a asp-controller="BlogDetails" asp-action="BlogDetails" asp-route-blogId="@item.BlogId" class="btn btn-danger">Detayını Gör</a>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carousel-captions1" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-captions1" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>