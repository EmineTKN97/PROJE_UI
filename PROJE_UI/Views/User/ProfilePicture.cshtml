@using PROJE_UI.Models
@model UserMedia

@section css
{
    <style>
        main {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 70vh;
            margin: auto;
            padding: auto;
        }

        .rounded-form-container {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            width: 700px;
        }
    </style>
}

<div class="rounded-form-container">
    <center><h1 class="text-danger">PROFİL FOTAĞRAFINI GÜNCELLE</h1></center>
    @using (Html.BeginForm("UpdatePicture", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()
        <div class="mb-3">
                <label for="formFileLg" class="form-label">Dosya seç:</label>
            <input class="form-control form-control-lg" id="formFileLg" name="ImagePath" type="file">@Model.ImagePath
            <input  id="MediaId" name="MediaId" value="@Model.MediaId" />
       
        </div>
       
        <center><button type="submit" class="btn btn-danger">Resimi Güncelle</button></center>
    }
</div>


